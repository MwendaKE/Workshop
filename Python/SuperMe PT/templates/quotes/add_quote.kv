#:import AddQuoteWindow screens.quotes.add_quote

<AddQuoteWindow>:
    author: quote_author_spinner
    category: quote_category_spinner
    quote: quote_quote_input
    
    
    ScrollView:
        effect_cls: ScrollEffect
        
        
	    AddEditContentContainer:
	        BoxLayout:
	            size_hint_y: None
	            height: '35dp'
	            ContentHeader:
	                text: "ADD QUOTE:"
	       
	        BoxLayout:
	            spacing: 10
	            padding: 10
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: "vertical"
	            
	            
	            BuddyLabel:
	                text: "Author: *"
	            
	            BoxLayout:
	                size_hint_y: None
	                height: '35dp'
	                QuotesAuthorSpinner:
	                    size_hint_x: .85
	                    id: quote_author_spinner
	                    text: "Select Author"
	                    
	                BuddyButton:
	                    text: "+"
	                    size_hint_x: .15
	                    on_release: root.manager.current = "addquoteauthor"
	                   
	                   
	            BuddyLabel:
	                text: "Category: *"
	                
	            BoxLayout:
	                size_hint_y: None
	                height: '35dp'
	                GeneralCategorySpinner:
	                    size_hint_x: .85
	                    id: quote_category_spinner
	                    text: "Select Category"
	                    
	                BuddyButton:
	                    size_hint_x: .15
	                    on_release: root.manager.current = "addquotecateg"
	              
	              
	            BuddyLabel: 
	                text: "Quote: *"
	                
	            InputTextEdit:
	                id: quote_quote_input
	                
	                
	        BoxLayout:
            	size_hint_y: None
                height: '20dp'
                
                
            BoxLayout:
                padding: 10
                size_hint_y: None
                height: '40dp'
                orientation: "vertical"
         
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    size: '160dp', '40dp'
                    pos_hint: {'right': 0.98, 'y': 0.20}
                    
                    CancelSaveButton:
                        text: "Cancel"
                        size_hint: None, None
                        size: '80dp', self.parent.height
                        on_release: root.manager.current = "quotes"
                  
                    CancelSaveButton:                                                                                                                   
                        text: "Save"
                        size_hint: None, None
                        size: '80dp', self.parent.height 
                        on_release: root.add_quote()
                                         