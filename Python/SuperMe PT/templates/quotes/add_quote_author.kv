#:import AddQuoteAuthorWindow screens.quotes.add_quote_author

<AddQuoteAuthorWindow>:
    author_name: quote_authorname_input
    occupation: quote_authoroccupation_input
    country: quote_authorcountry_spinner
    description: quote_authordesc_input
    
    
    ScrollView:
        effect_cls: ScrollEffect
        
        
	    AddEditContentContainer:
	        BoxLayout:
	            size_hint_y: None
	            height: '35dp'
	            ContentHeader:
	                text: "ADD QUOTE AUTHOR:"
	               
	        BoxLayout:
	            padding: 10
	            spacing: 10
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: "vertical"
	            
	            
	            BuddyLabel:
	                text: "Author Name: *"
	                
	            InputTextEditNormal:
	                id: quote_authorname_input
	                
	                
	            BuddyLabel:
	                text: "Occupation: *"
	                
	            InputTextEditNormal:
	                id: quote_authoroccupation_input
	               
	               
	            BuddyLabel:
	                text: "Country: *"
	                
	            CountrySpinner:
	                id: quote_authorcountry_spinner
	                text: "Select Country"
	                
	                
	            BuddyLabel:
	                text: "Description: *"
	                
	            InputTextEdit:
	                id: quote_authordesc_input
	                
	                
	        BoxLayout:
            	size_hint_y: None
                height: '20dp'
                
                
            BoxLayout:
                padding: 10
                size_hint_y: None
                height: '40dp'
                orientation: "vertical"
         
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    size: '160dp', '40dp'
                    pos_hint: {'right': 0.98, 'y': 0.20}
                    
                    CancelSaveButton:
                        text: "Cancel"
                        size_hint: None, None
                        size: '80dp', self.parent.height
                        on_release: root.manager.current = "addquote"
                  
                    CancelSaveButton:                                                                                                                   
                        text: "Save"
                        size_hint: None, None
                        size: '80dp', self.parent.height 
                        on_release: root.add_author()
            