#:import QuotesWindow screens.quotes.quotes

<QuotesWindow>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
        	height: '40dp'
            MainTitleLabel:
                text: "QUOTES"
                size_hint: .5, None
        	    height: self.parent.height
                
            GeneralLabel:
                id: quotes_count
                font_size: "16sp"
                size_hint: .5, None
        	    height: self.parent.height
                halign: "right"
                color: (0.149, 0.867, 0.780, 1)
       
       
        FloatLayout:
            MDScrollView:
                MDList:
                    id: quotes_container
            
            AddButtonContainer:
                AddButton:
                    text: "Back"
                    icon: "arrow-left"
                    on_release: root.manager.current = "dashboard"
                
                AddButton:
                    text: "Add"
                    icon: "plus"
                    on_release: root.manager.current = "addquote"
