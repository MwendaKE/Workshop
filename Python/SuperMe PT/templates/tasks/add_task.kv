#:import AddTaskWindow screens.tasks.add_task

<AddTaskWindow>:
    task_name: task_name_input
    date: task_date_input
    dur1: task_dur1_input
    dur2: task_dur1_spinner
    categ: task_categ_spinner
    desc: task_desc_input
    
    
    ScrollView:
        effect_cls: ScrollEffect
        
        
	    AddEditContentContainer:
	        BoxLayout:
	            size_hint_y: None
	            height: '35dp'
	            ContentHeader:
	                text: "ADD TASK:"
	           
	           
	        BoxLayout:
	            spacing: 10
	            padding: 10
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: "vertical"
	            
	            
	            BuddyLabel:
	                text: "Task Name: *"
	                
	            InputTextEditNormal:
	                id: task_name_input
	           
	           
	            BuddyLabel:
	                text: "Date: *"
	                
	            InputTextEditNormal:
	                id: task_date_input
	                text: root.show_current_date()
	                
	                
	            BuddyLabel:
	                text: "Duration: *"
	                
	            BoxLayout:
	                size_hint_y: None
	                height: '35dp'
	                InputTextEditNormal:
	                    id: task_dur1_input
	                    size_hint_x: .5
	                    
	                Spinner:
	                    id: task_dur1_spinner
	                    text: "Select Duration"
	                    size_hint_x: .5
	                    values: ["Day(s)", "Week(s)", "Month(s)", "Year(s)"]
	                
	                
	            BuddyLabel:
	                text: "Category: *"
	                
	            BoxLayout:
	                size_hint_y: None
	                height: '35dp'
	                GeneralCategorySpinner:
	                    size_hint_x: .85
	                    id: task_categ_spinner
	                    text: "Select Category"
	                    
	                BuddyButton:
	                    text: "+"
	                    size_hint_x: .15
	                    on_release: root.manager.current = "addtaskcateg"
	       
	       
	            BuddyLabel:
	                text: "Description: *"
	                
	            InputTextEdit:
	                id: task_desc_input
	                
	                
	        BoxLayout:
            	size_hint_y: None
                height: '20dp'
                
                
            BoxLayout:
                padding: 10
                size_hint_y: None
                height: '40dp'
                orientation: "vertical"
         
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    size: '160dp', '40dp'
                    pos_hint: {'right': 0.98, 'y': 0.20}
                    
                    CancelSaveButton:
                        text: "Cancel"
                        size_hint: None, None
                        size: '80dp', self.parent.height
                        on_release: root.manager.current = "tasks"
                  
                    CancelSaveButton:                                                                                                                   
                        text: "Add"
                        size_hint: None, None
                        size: '80dp', self.parent.height 
                        on_release: root.add_task()
             