#:import TaskViewWindow screens.tasks.task_view

<TaskViewWindow>:
    tv_title: task_titlelabel
    
    BoxLayout:
        orientation: "vertical"
        
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
        	height: '40dp'
        	padding: "15dp" , 0, "15dp", 0
            
            GeneralLabel:
                id: task_titlelabel
                size_hint: 1, 1
                padding: 0
               
            TitleSeparatorHorz:
            	 
            	 
        FloatLayout:
            MDScrollView:
                MDList:
                    id: task_content_container

            ContentFourButtonsContainer:
                ContentFourButton:
                    text: "Back"
                    on_release: root.manager.current = "tasks"
                
                ContentFourButton:
                    text: "Edit"
                    on_release: root.edit_task()
          
                ContentFourButton:
                    text: "Delete"
                    on_release: root.delete_task()
                    
                ContentFourButton:
                    text: "About"
                    on_release: root.about_task()  