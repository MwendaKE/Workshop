#:import ClipsWindow screens.clips.clips

		
<ClipsWindow>:
    clips_count: clips_count
    
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            size_hint_y: None
        	height: '40dp'
            MainTitleLabel:
                text: "CLIPS:"
                size_hint: .5, None
        	    height: self.parent.height
         
            GeneralLabel:
                id: clips_count
                font_size: "16sp"
                size_hint: .5, None
        	    height: self.parent.height
                halign: "right"
                color: (0.149, 0.867, 0.780, 1)
                   
               
        MDFloatLayout:
            MDScrollView:
                MDList:
                    id: clips_container
            
            AddButtonContainer:
                AddButton:
                    text: "Back"
                    icon: "arrow-left"
                    on_release: root.manager.current = "dashboard"
                
                AddButton:
                    text: "Add"
                    icon: "plus"
                    on_release: root.manager.current = "addclip"