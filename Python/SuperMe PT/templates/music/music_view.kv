#:import MusicViewWindow screens.music.music_view

<MusicViewWindow>:
    ms_title: music_titlelabel
    
    BoxLayout:
        orientation: "vertical"
        
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
        	height: '40dp'
        	padding: "15dp" , 0, "15dp", 0
            
            GeneralLabel:
                id: music_titlelabel
                size_hint: 1, 1
                padding: 0
                
            TitleSeparatorHorz:
             
             
        FloatLayout:  
            MDScrollView:
                MDList:
                    id: lyries_container
          

            ContentThreeButtonsContainer:
                ContentThreeButton:
                    text: "Back"
                    on_release: root.manager.current = "music"
             
                ContentThreeButton:
                    text: "Delete"
                    on_release: root.delete_song()
                    
                ContentThreeButton:
                    text: "About"
                    on_release: root.about_song()            