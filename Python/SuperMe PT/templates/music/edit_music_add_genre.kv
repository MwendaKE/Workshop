#:import EditMusicAddGenreWindow screens.music.edit_music_add_genre

<EditMusicAddGenreWindow>:
    genre: music_genre_input
    
    
    ScrollView:
        effect_cls: ScrollEffect
        
        
	    AddEditContentContainer:
	        BoxLayout:
	            size_hint_y: None
	            height: '35dp'
	            ContentHeader:
	                text: "EDIT MUSIC GENRE:"

	        BoxLayout:
	            spacing: 10
	            padding: 10
	            orientation: "vertical"
	            size_hint_y: None
	            height: self.minimum_height
	            
	            
	            BuddyLabel:
	                text: "Genre: *"
	           
	            InputTextEditNormal:
	                id: music_genre_input
	                
	                
	        BoxLayout:
            	size_hint_y: None
                height: '20dp'
                
                
            BoxLayout:
                padding: 10
                size_hint_y: None
                height: '40dp'
                orientation: "vertical"
          
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    size: '160dp', '40dp'
                    pos_hint: {'right': 0.98, 'y': 0.20}
                    
                    CancelSaveButton:
                        text: "Cancel"
                        size_hint: None, None
                        size: '80dp', self.parent.height
                        on_release: root.manager.current = "editmusic"
                  
                    CancelSaveButton:                                                                                                                   
                        text: "Add"
                        size_hint: None, None
                        size: '80dp', self.parent.height 
                        on_release: root.add_genre()
                     