#:import AddPoemWindow screens.poems.add_poem

<AddPoemWindow>:
    title: poem_title_input
    author: poem_author_spinner
    body: poem_body_input
   
    ScrollView:
        effect_cls: ScrollEffect
        
        
	    AddEditContentContainer:
	        BoxLayout:
	            size_hint_y: None
	            height: '35dp'
	            ContentHeader:
	                text: "ADD POEM"
	                
	                
	        BoxLayout:
	            padding: 10
	            spacing: 10
	            size_hint_y: None
	            height: self.minimum_height
	            orientation: "vertical"
	            
	            
	            BuddyLabel:
	                text: "Title: *"
	                
	            InputTextEditNormal:
	                id: poem_title_input
	                
	                
	            BuddyLabel:
	                text: "Author: *"
	                
	            BoxLayout:
	                size_hint_y: None
	                height: '35dp'
	                PoemAuthorSpinner:
	                    id: poem_author_spinner
	                    text: "Select Author"
	                    size_hint_x: .85
	                
	                BuddyButton:
	                    size_hint_x: .15
	                    on_release: root.manager.current = "addpoemauthor"
	               
	               
	            BuddyLabel:
	                text: "Body: *"
	                
	            InputTextEdit:
	                id: poem_body_input
	                
	                
	        BoxLayout:
            	size_hint_y: None
                height: '20dp'
                
                
            BoxLayout:
                padding: 10
                size_hint_y: None
                height: '40dp'
                orientation: "vertical"
          
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    size: '160dp', '40dp'
                    pos_hint: {'right': 0.98, 'y': 0.20}
                    
                    CancelSaveButton:
                        text: "Cancel"
                        size_hint: None, None
                        size: '80dp', self.parent.height
                        on_release: root.manager.current = "poems"
                  
                    CancelSaveButton:                                                                                                                   
                        text: "Add"
                        size_hint: None, None
                        size: '80dp', self.parent.height 
                        on_release: root.add_poem()
             