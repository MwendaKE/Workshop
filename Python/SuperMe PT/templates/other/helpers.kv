#===== GENERAL WIDGETS =====
   
<Spinner>:
    size_hint_y: None
    height: '35dp'
    font_size: '16sp'
    color: "#FFFFFF"
    background_color: "#111111"
    padding: 10, 10
    
    canvas.before:
        Color:
            rgba: (1, 1, 1, .5)
                     
        Line:
            rounded_rectangle: self.x, self.y, self.width, self.height, 0.5
            width: 1.3
    
    
<Popup>:
    separator_height: "2dp"
    size_hint: .80, .30
    separator_color: (1,1,1,.2)
    background_color: "#111111"
    title_color: "#FFFFFF"
    title_size: "28sp"
    title_font: "./assets/fonts/Scramble_Storm.ttf"
    size: 400, 550
    auto_dismiss: False
    
    canvas.before:
        Color:
            rgba: (1, 1, 1, .8)
                     
        Line:
            rounded_rectangle: self.x, self.y, self.width, self.height, 0.5
            width: 1.3
            
   
<ScrollView>:
    bar_width: 1
    bar_color: "#111111"
    bar_inactive_color: 0, 0, 0, .5
    scroll_type: ['bars', 'content']
                    
  
<CheckBox>:
	padding_x: 2
	canvas.before:
	    Clear:
	    Color:
            rgba: (1, 1, 1, .5)
        
        Ellipse:
            pos:self.center_x - 10, self.center_y - 10
            size:[20,20]


<OneLineIconListItem>:
	font_size: "12sp"
	
	
