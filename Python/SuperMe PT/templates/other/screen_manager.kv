MDBoxLayout:
    orientation: "vertical"
           
    MDNavigationLayout: 
        MDTopAppBar:
            size_hint: 1, 0.08
            pos_hint: {'top': 1}
            md_bg_color: "#111111"
            elevation: 3
            padding: 0
            
            MDBoxLayout:
                size_hint: None, None
                size: self.parent.size
                padding: 0
                
                MDIconButton:
                    icon: "menu"
                    icon_color: "#E64646"
                    size_hint: 0.15, 1
                    on_release: app.open_side_menu()
                
                MDLabel:
                    text: "S U P E R M E"
                    size_hint: 0.70, 1
                    font_name: "./assets/fonts/SecretsStencil.ttf"
                    font_size: "22sp"
                    color: (0.902, 0.275, 0.275, 1)
                    
                MDIconButton:
                    icon: "magnify"
                    size_hint: 0.15, 1
                    icon_color: "#E64646"
                    on_release: app.open_search_window()
            
        
        ScreenManager:
            size_hint:1, 0.92
            id: manager
            
        MDNavigationDrawer:
            id: side_menu
            
            MenuContentDrawer:
            
                                                                                                                                                                                                                                                                                                                                
