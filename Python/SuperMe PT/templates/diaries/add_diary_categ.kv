#:import AddDiaryCategWindow screens.diaries.add_diary_categ

<AddDiaryCategWindow>:
    category: diary_category_spinner
    
    
    ScrollView:
        effect_cls: ScrollEffect
        
        
	    AddEditContentContainer:
	        BoxLayout:
	            size_hint_y: None
	            height: '35dp'
	            ContentHeader:
	                text: "ADD DIARY CATEGORY:"
	            
	            
	        BoxLayout:
	            spacing: 10
	            padding: 10
	            orientation: "vertical"
	            size_hint_y: None
	            height: self.minimum_height
	            
	            
	            BuddyLabel:
	                text: "Category: *"
	               
	            InputTextEditNormal:
	                id: diary_category_spinner
	              
	              
	        BoxLayout:
            	size_hint_y: None
                height: '20dp'
                
                
            BoxLayout:
                padding: 10
                size_hint_y: None
                height: '40dp'
                orientation: "vertical"
          
                BoxLayout:
                    spacing: 10
                    size_hint: None, None
                    size: '160dp', '40dp'
                    pos_hint: {'right': 0.98, 'y': 0.20}
                    
                    CancelSaveButton:
                        text: "Cancel"
                        size_hint: None, None
                        size: '80dp', self.parent.height
                        on_release: root.manager.current = "addiary"
                  
                    CancelSaveButton:                                                                                                                   
                        text: "Add"
                        size_hint: None, None
                        size: '80dp', self.parent.height 
                        on_release: root.add_category()
            