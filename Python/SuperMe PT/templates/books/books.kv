#:import BooksWindow screens.books.books

<TwoLineBookView>:
	IconLeftWidgetWithoutTouch:
		icon: "book-open-outline"
		
		
<BooksWindow>:
    MDBoxLayout:
        orientation: "vertical"
        
        MDBoxLayout:
            size_hint_y: None
        	height: '40dp'
        	
            MainTitleLabel:
                id: books_count
                text: "BOOKS:"
                size_hint: .25, None
        	    height: self.parent.height
        	    
        	GeneralLabel:
                id: books_total_count
                font_size: "16sp"
                size_hint: .25, None
        	    height: self.parent.height
                halign: "left"
                color: (0.902, 0.275, 0.275, .8)
       
            GeneralLabel:
                id: books_read
                font_size: "16sp"
                size_hint: .1667, None
        	    height: self.parent.height
                halign: "right"
                color: (0.514, 0.682, 0.455, 1)

            GeneralLabel:
                id: books_unread
                font_size: "16sp"
                size_hint: .1667, None
        	    height: self.parent.height
                halign: "right"
                color: (0.937, 0.533, 0.529, 1)
  
            GeneralLabel:
                id: books_reading
                font_size: "16sp"
                size_hint: .1667, None
        	    height: self.parent.height
                halign: "right"
                color: (0.918, 0.757, 0.333, 1)
     
        
        MDFloatLayout:
            MDScrollView:
            	MDList:
            		id: books_container
         
            AddButtonContainer:
                AddButton:
                    text: "Back"
                    icon: "arrow-left"
                    on_release: root.manager.current = "dashboard"
                
                AddButton:
                    text: "Add"
                    icon: "plus"
                    on_release: root.manager.current = "addbook"          