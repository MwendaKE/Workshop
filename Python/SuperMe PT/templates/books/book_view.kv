#:import BookViewWindow screens.books.book_view

<BookViewWindow>:
    bk_title: book_titlelabel
    
    BoxLayout:
        orientation: "vertical"
        
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
        	height: '40dp'
        	padding: "15dp" , 0, "15dp", 0
        	
        	GeneralLabel:
                id: book_titlelabel
                size_hint: 1, 1
        	    padding: 0
             
            TitleSeparatorHorz:
                
            
        FloatLayout: 
            MDScrollView:
                MDList:
                    id: book_content_container
          
            ContentFourButtonsContainer
                ContentFourButton:
                    text: "Back"
                    on_release: root.manager.current = "books"
                
                ContentFourButton:
                    text: "Edit"
                    on_release: root.edit_book()
          
                ContentFourButton:
                    text: "Delete"
                    on_release: root.delete_book()
                    
                ContentFourButton:
                    text: "About"
                    on_release: root.about_book()    