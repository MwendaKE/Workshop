#:import CategoryWindow screens.menu.categories


<OneLineCategoriesView>:
	IconLeftWidgetWithoutTouch:
		icon: "select-group"


<CategoryWindow>:
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            size_hint_y: None
        	height: '35dp'
            MainTitleLabel:
                text: "CATEGORIES"
                size_hint_x: .5
                size_hint_y: None
        	    height: '35dp'
         
            GeneralLabel:
                id: categs_count
                font_size: 22
                size_hint_x: .5
                size_hint_y: None
        	    height: '35dp'
                halign: "right"
                text: "0"
                color: (0.149, 0.867, 0.780, 1)
                   
               
        MDFloatLayout:
            MDScrollView:
                MDList:
                    id: categs_container
            
            ContentSingleButton
                on_release: root.manager.current = "dashboard"
           