#:import ArticleWindow screens.articles.articles

<ThreeLineArticleView>:
	IconLeftWidgetWithoutTouch:
		icon: "earth"
		
		
<ArticleWindow>:
    article_count: article_count
    
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            size_hint_y: None
        	height: '40dp'
            MainTitleLabel:
                text: "ARTICLES:"
                size_hint: 0.5, None
        	    height: self.parent.height
         
            GeneralLabel:
                id: article_count
                font_size: "16sp"
                size_hint: 0.5, None
        	    height: self.parent.height
                halign: "right"
                color: (0.149, 0.867, 0.780, 1)
                   
               
        MDFloatLayout:
            MDScrollView:
                MDList:
                    id: articles_container
            
            AddButtonContainer:
                AddButton:
                    text: "Back"
                    icon: "arrow-left"
                    on_release: root.manager.current = "dashboard"
                
                AddButton:
                    text: "Add"
                    icon: "plus"
                    on_release: root.manager.current = "addarticle"